<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>

<BorderPane xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.SampleController">
   <center>
      <AnchorPane prefHeight="600.0" prefWidth="600.0" BorderPane.alignment="CENTER">
         <children>
            <HBox layoutY="552.0" prefHeight="48.0" prefWidth="600.0">
               <children>
                  <TextField fx:id="userMessage" alignment="TOP_LEFT" prefHeight="30.0" prefWidth="455.0" />
                  <Button fx:id="send" onAction="#messageSend" text="Send" />
               </children>
            </HBox>
            <TextArea fx:id="messageBox" minHeight="-Infinity" minWidth="-Infinity" prefHeight="528.0" prefWidth="600.0" />
         </children>
      </AnchorPane>
   </center>
   <cursor>
      <Cursor fx:constant="SW_RESIZE" />
   </cursor>
</BorderPane>
